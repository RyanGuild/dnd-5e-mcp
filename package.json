{
  "name": "dnd-character-mcp",
  "version": "1.0.0",
  "description": "MCP server for D&D 5e character management",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "watch": "tsx watch src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:characters": "jest --testPathPattern=character.test.ts",
    "test:dice": "jest --testPathPattern=dice.test.ts",
    "test:inventory": "jest --testPathPattern=inventory.test.ts",
    "test:spells": "jest --testPathPattern=spells.test.ts",
    "test:validation": "jest --testPathPattern=validation.test.ts",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "echo 'Linting placeholder - add ESLint configuration'",
    "format": "echo 'Formatting placeholder - add Prettier configuration'",
    "validate": "npm run build && npm run test:ci",
    "clean": "rm -rf dist coverage *.json.tmp"
  },
  "keywords": [
    "mcp",
    "dnd",
    "dungeons-and-dragons",
    "character",
    "rpg"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "@types/uuid": "^10.0.0",
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "uuid": "^12.0.0"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.31",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
